---
type PreparationTime = {
	label: string;
	timeInMinutes: number;
};

const times: PreparationTime[] = [
	{
		label: 'Preparation',
		timeInMinutes: 5,
	},
	{
		label: 'Cooking',
		timeInMinutes: 5,
	},
];

const totalTime = times.reduce((accumulator, currentTimeValue) => {
	return accumulator + currentTimeValue.timeInMinutes;
}, 0);
---

<div class='rounded-md bg-rose-white p-8'>
	<p class='mb-4 text-xl font-bold text-dark-raspberry'>Preparation time</p>
	<ul class='list-inside list-disc marker:text-dark-raspberry'>
		<li class='mt-2 list-item pb-2 pl-4'>
			<strong>Total:</strong> Approximately {totalTime} minutes
		</li>
		{
			times.map((preparationTime) => {
				return (
					<li class='mt-2 list-item pb-2 pl-4'>
						<strong>{preparationTime.label}:</strong>{' '}
						{preparationTime.timeInMinutes} minutes
					</li>
				);
			})
		}
	</ul>
</div>
